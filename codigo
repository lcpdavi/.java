    private void jBsomaActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        VariosCalculos v = new VariosCalculos();
        v.setValor1(Double.valueOf(jTprimeiroValor.getText()));
        v.setValor2(Double.valueOf(jTsegundoValor.getText()));
        jLresultado.setText("O dobro e:"+v.somar());
        
    }                                      

    private void jBmultiplicaActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        VariosCalculos v = new VariosCalculos();
        v.setValor1(Double.valueOf(jTprimeiroValor.getText()));
        v.setValor2(Double.valueOf(jTsegundoValor.getText()));
        jLresultado.setText("O resultado da multiplicacao e :"primeiroValor*segundoValor());
        
    }                                            

